-MAN_MAKERULE = \
-	@for f in *.[12345678] ""; do \
-		if test ! -z "$$f"; then \
-			$(ZIP) --best -c < $$f > $$f.gz; \
-		fi; \
-	done
-
-DIST_MAKERULE = \
-	$(MAKEF) -C build dist
-
-SOURCE_MAKERULE = \
-	@test -z "$$DIR" && DIR="."; \
-	for f in $(SRCFILES) ""; do \
-	    test -z "$$f" && break; \
-	    test -L "$$f" || $(ECHO) $$DIR/$$f; \
